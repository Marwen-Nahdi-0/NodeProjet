<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List of Salles</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include('./NavAdmin.ejs') %>
  <div class="container">
    <h2 class="text-center mt-5 mb-4">List of Salles</h2>
    <a href="/addSalle/<%=tokenData%>" class="row justify-content-center"> <button type="button" class="btn btn-primary">Add Salle</button></td></a>
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Capacity</th>
              <th scope="col">Equipments</th>
              <th scope="col">Location</th>
              <th scope="col">Start Time</th>
              <th scope="col">End Time</th>
              <th scope="col">Price</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% salles.forEach(function(salle) { 
                d = "/salle/delete/"+salle.id+"/"+tokenData ;
                m="/salle/"+salle.id+"/"+tokenData ; %>            
            <tr>
              <td><%= salle.Name %></td>
              <td><%= salle.Capacity %></td>
              <td><%= salle.Equipments %></td>
              <td><%= salle.Location %></td>
              <td><%= salle.StartTime %></td>
              <td><%= salle.EndTime %></td>
              <td><%= salle.Price %></td>
              <td><a href=<%= d %> ><button type="button" class="btn btn-danger">Delete</button></a>
               <a href=<%= m %>> <button type="button" class="btn btn-primary">Modify</button></td></a>
            </tr>
            <% }); %>
           
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
</script>
</body>
</html>

