<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List of Reservations</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('./NavUser.ejs') %>

  <div class="container">
    <h2 class="text-center mt-5 mb-4">List of Reservations</h2>
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Salle Name</th>
              <th scope="col">Date</th>
              <th scope="col">Price</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% reservations.forEach(function(reservation) { 
              a="/reservation/delete/"+reservation.id %> 
           <tr>
              <td><%=reservation.salle.Name%></td>
              <td><%=reservation.Date%></td>
              <td><%=reservation.salle.Price%></td>
              <td>
               <a href=<%=a %>> <button type="button" class="btn btn-danger">Cancel</button></a>
                <button type="button" class="btn btn-primary">Modify</button>
              </td>
            </tr>
        
            <% }); %>
            <!-- Add more rows as needed -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
</script>
</html>

